<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="400sp"
        android:layout_height="50dp"
        android:text="Adivina la edad de tu perro"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/ImagenPerro"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/foto_perro"
        />

    <TextView
        android:id="@+id/TextPregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cual es la edad del perro?"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:padding="16dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/EditEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad del perro"
        />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/BotonEnviar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Calcular edad"
        android:layout_margin="10dp"
        android:textSize="20sp"
        />







</LinearLayout>